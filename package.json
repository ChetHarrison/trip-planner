{
  "name": "trips-app",
  "version": "1.0.0",
  "type": "module",
  "main": "server/server.js",
  "description": "Trip Planner App with full build + test pipeline",
  "author": "Chet Harrison",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChetHarrison/trip-planner.git"
  },
  "scripts": {
      "dev": "concurrently \"npm run serve\" \"npm run watch:tests\" \"npm run lint\" \"npm run watch:docs\" \"npm run serve:docs\" \"npm run serve:coverage\" \"npm run serve:tests\"",
      "serve": "nodemon --watch server/server.js",
      "build": "npm run lint:fix && npm run test && npm run docs",
      "watch:docs": "nodemon --config config/nodemon.docs.json",
      "watch:tests": "nodemon --config config/nodemon.tests.json",
      "watch:lint": "nodemon --config config/nodemon.lint.json",
      "lint": "eslint --config config/eslint.config.mjs public/js",
      "lint:fix": "eslint --config config/eslint.config.mjs public/js --fix",
      "test": "jest --config=config/jest.config.mjs --coverage --coverageDirectory=diagnostics/coverage",
      "docs": "npx jsdoc -c config/jsdoc.config.json",
      "serve:docs": "live-server diagnostics/docs --port=5000 --no-browser --quiet",
      "serve:coverage": "live-server diagnostics/coverage/lcov-report --port=5001 --no-browser --quiet",
      "serve:tests": "live-server diagnostics/test-report --port=5002 --no-browser --quiet"
  },
    "nodemonConfig": {
    "ignore": [".out/**/*"]
  },
  "dependencies": {
    "amadeus": "^11.0.0",
    "axios": "^1.9.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.17.1",
    "jquery": "^3.7.1",
    "minami": "^1.2.3",
    "moment": "^2.30.1",
    "taffydb": "^2.7.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/preset-env": "^7.27.1",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^9.1.2",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jsdoc": "^4.0.4",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.10",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
